<?import javafx.geometry.Insets?>


<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >

    <TextArea VBox.vgrow="ALWAYS" fx:id="textArea"  editable="false"/>

    <HBox>
        <Button text  = "Send!" onAction="#addTextToArea"/>
        <TextField fx:id="mainTextField" promptText="Write Here..."
                   HBox.hgrow="ALWAYS" onAction="#addTextToArea"/>
    </HBox>

    <padding>
        <Insets bottom="15.0" right="15.0" left="15.0" top="15.0"/>
    </padding>
</VBox>